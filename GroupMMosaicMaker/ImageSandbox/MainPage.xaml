<Page
    x:Class="ImageSandbox.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageSandbox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="LoadButton" Icon="OpenFile" Label="Load Picture" Click="LoadButton_OnClick"  />
            <AppBarButton x:Name="SaveButton" Icon="Save" Label="Save Picture"  Click="SaveButton_OnClick" />
        </CommandBar>
        <Image x:Name="imageDisplay" HorizontalAlignment="Left" Height="354" Margin="37,63,0,0" VerticalAlignment="Top" Width="574"/>

        <Button x:Name="Refresh" Content="Refresh" HorizontalAlignment="Left" Margin="594,453,0,0" VerticalAlignment="Top"  Width="133" Height="59" Click="Refresh_Click"/>

        <Image x:Name="AlterImageDisplay" HorizontalAlignment="Left" Height="355" Margin="682,59,0,0" VerticalAlignment="Top" Width="610"/>

    </Grid>
</Page>
